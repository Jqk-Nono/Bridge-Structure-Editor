    <TextBlock Grid.Column="0" Margin="10,2" Width="25" Height="25" Padding="4" ClipToBounds="True" SnapsToDevicePixels="True" RenderTransformOrigin="0.5,0.5">
        <TextBlock.Background>
            <DrawingBrush Drawing="{StaticResource AddNewIcon}" Stretch="Uniform">
            </DrawingBrush>
        </TextBlock.Background>
    </TextBlock>
</UserControl>
